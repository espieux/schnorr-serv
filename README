BUILDING AND RUNNING SCHNORR SERVER
docker build -t schnorr-server -f Dockerfile .
docker run --name schnorr-server -p 5000:5000 schnorr-server

GENERATE SCHNORR PROOF
curl http://localhost:5000/schnorr-proof
example output:
{"e":48945672900467474365036826241447275912660390988125862475549255457797877048076,"g":2,"p":7602399634086966893470190385554002826535081258311302270377947870242373644539641570036941871198822850125007395622984453642761935146150619570919026968886543,"r":2050289310567195790354278445104014523830913457955981794990060372051605642207027262910649566734521283666913787994186128415164212566341445864154094133166069,"s":1239425306488865042459580042121183989603288061846816202772043830288062053042327990792110559769079625607305119399436016266875736356768880341442952100630587,"y":7501996685897510049959443682085016034129355853343020161104033488809535861620247214717555978759280307414414647260889316327569194471705477934131324418534100}

VERIFY SCHNOOR PROOF
curl -X POST http://localhost:5000/verify-proof -H "Content-Type: application/json" -d '{"e":48945672900467474365036826241447275912660390988125862475549255457797877048076,"g":2,"p":7602399634086966893470190385554002826535081258311302270377947870242373644539641570036941871198822850125007395622984453642761935146150619570919026968886543,"r":2050289310567195790354278445104014523830913457955981794990060372051605642207027262910649566734521283666913787994186128415164212566341445864154094133166069,"s":1239425306488865042459580042121183989603288061846816202772043830288062053042327990792110559769079625607305119399436016266875736356768880341442952100630587,"y":7501996685897510049959443682085016034129355853343020161104033488809535861620247214717555978759280307414414647260889316327569194471705477934131324418534100}'
example output:
{"message":"Proof is valid!","valid":true}

BUILDING AND RUNNING FAULTY SCHNORR SERVER
docker build -t faulty-schnorr-server -f Dockerfile.faulty .
docker run --name faulty-schnorr-server -p 5000:5000 faulty-schnorr-server

RUNNING ATTACK SCRIPT TO FIND PRIVATE KEY x:
python exploit_schnorr.py
